@model MvcBootstrap.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap")
    <!-- Custom styles for this template -->
    <title>Login</title>
</head>
<body class="bg-light">
    @{Html.EnableClientValidation();}
    @{Html.EnableUnobtrusiveJavaScript();}

    <div style="margin-top: 25px" class="container col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id = "inputForm", @class = "needs-validation", @role = "form", @novalidate = "novalidate" }))
        {
            <div class="card box-shadow">
                            <div class="card-body">
                    <div class="form-group">
                        @*<label for="username">Username</label>*@
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.Username, new { @id = "txtUsername", @class = "form-control", @placeholder = "Username" })
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(x => x.Username)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                            </div>
                            @Html.PasswordFor(x => x.Password, new { @id = "txtPassword", @class = "form-control", @placeholder = "Password" })
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                        </div>
                    </div>
                    <div class="form-group custom-control custom-checkbox">
                        <div class="input-group">
                            @Html.CheckBoxFor(x => x.RememberMe, new { @id = "cbRememberMe", @class = "custom-control-input" })
                            @Html.LabelFor(x => x.RememberMe, new { @class = "custom-control-label", @for = "cbRememberMe" })
                            @*<input type="checkbox" class="custom-control-input" id="cbRememberMe">
                                <label class="custom-control-label" for="cbRememberMe">Remember Me</label>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-md btn-success btn-primary">Login</button>
                        <a href="#forgotPasswordModal" data-toggle="modal" data-target="#forgotPasswordModal">
                            Forgot Password?
                        </a>
                        <a href="#changePasswordModal" data-toggle="modal" data-target="#changePasswordModal">
                            Change Password
                        </a>
                    </div>
                    <hr class="mb-4" />
                    <div class="form-group">
                        <label>Don't have an account!</label>
                        <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                            Sign Up Here
                        </a>
                    </div>
                </div>
            </div>

        }
    </div>

    <div id="forgotPasswordModal" class="modal fade" role="dialog">
        @using (Html.BeginForm("Forgot", "Home", FormMethod.Post, new { @id = "forgotForm", @data_toggle = "validator", @role = "form" }))
        {
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Forgot Password</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.Username, new { @id = "txtForgotEmail", @class = "form-control", @placeholder = "Email" })
                                <div class="invalid-feedback">
                                    @Html.ValidationMessageFor(x => x.Username)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-md btn-primary">Send Email</button>
                        @*<button id="btnForgot" type="submit" class="btn btn-primary" data-disable="false" data-dismiss="modal">Send Email</button>*@
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="changePasswordModal" class="modal fade" role="dialog">
        @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @id = "changePassForm", @data_toggle = "validator", @role = "form" }))
        {
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Change Password</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                                </div>
                                @Html.PasswordFor(x => x.Password, new { @id = "txtCurrPassword", @class = "form-control", @placeholder = "Current Password" })
                                <div class="invalid-feedback">
                                    @Html.ValidationMessageFor(x => x.Password)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                                </div>
                                @Html.PasswordFor(x => x.NewPassword, new { @id = "txtNewPassword", @class = "form-control", @placeholder = "New Password" })
                                <div class="invalid-feedback">
                                    @Html.ValidationMessageFor(x => x.NewPassword)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                                </div>
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @id = "txtConfirmPassword", @class = "form-control", @placeholder = "Confirm Password" })
                                <div class="invalid-feedback">
                                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-md btn-primary">Submit</button>
                        @*<button id="btnChangePassword" type="submit" class="btn btn-primary" data-disable="false">Submit</button>*@
                    </div>
                </div>
            </div>
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
